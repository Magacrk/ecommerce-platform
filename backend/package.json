{
  "name": "ecommerce-backend",
  "version": "1.0.0",
  "description": "Backend API for multi-vendor e-commerce platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "prisma:migrate": "prisma migrate dev",
    "prisma:generate": "npx prisma generate",
    "prisma:studio": "prisma studio",
    "deploy:prod": "npm run build && node deployment/scripts/deploy-backend.js",
    "prisma:deploy": "npx prisma migrate deploy"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.350.0",
    "@aws-sdk/client-s3": "^3.350.0",
    "@aws-sdk/s3-request-presigner": "^3.350.0",
    "@prisma/client": "^4.15.0",
    "aws-sdk": "^2.1400.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.1.4",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "stripe": "^12.9.0",
    "uuid": "^9.0.0",
    "winston": "^3.9.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.2",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.17.32",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "prisma": "^4.15.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
